    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "(MacOS) Launch",
            "program": "bin/rizz",
            "args": ["--run", "bin/libspace-invaders.dylib"],
            "cwd": "${workspaceFolder}/../"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../bin/rizz.exe",
            "args": ["--run", "bin/space-invaders.dll"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../",
            "environment": [],
            "externalConsole": false
        }
    ]
}